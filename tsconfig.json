{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2019", "DOM", "ES6"],
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist"]
}
